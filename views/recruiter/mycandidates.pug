extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Mes candidats
    br
    table.table.table-hover
      thead
        tr
          th(scope="col") N°
          th(scope="col") Nom
          th(scope="col") Prenom
          th(scope="col") Job recherché
          th(scope="col") Supprimer
      tbody
      - for (var i = 0; i < length; i++){
        tr
          th(scope="row") #{i+1}
          td #{candidates[i].name}
          td #{candidates[i].firstname} 
          td #{candidates[i].job} 
          td 
            form(action="/recruiter/deleteCandidate/"+candidates[i]._id method='GET')
              input(type='hidden', name='_csrf', value=_csrf)
              button.btn.btn-danger.btn-sm.text-white.text-center.pr-1.ml-3(type="submit")
                i.fa.fa-trash
      - }
    
